#logo
- @page_title = :login.l

%div#login_page
  - form_tag session_path do
    %ul.edit.rounded
      %li
        != text_field_tag 'login', @login, :size => 30, :id => 'loginUsername', :class => 'medium', :placeholder => "Username"
      %li
        != password_field_tag 'password', nil, :size => 30, :id => 'loginPassword', :class => 'medium', :placeholder => "Password"
      %li
        %span
          Remember Me
        %span.toggle
          = check_box_tag 'remember_me', '1', @remember_me
  
    %ul.individual
      %li
        %input{:type => 'submit'}