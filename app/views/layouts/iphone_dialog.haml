!!! Strict
%html{:manifest => "/cache.manifest"}
  %head

    %meta{ 'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}/
    %title= "Rucksack"

    -# = stylesheet_link_tag 'pages'


    = javascript_include_tag 'jquery.1.3.2.min.js' 
    = javascript_include_tag 'jqtouch.js' 
    = javascript_include_tag 'jqtouch.transitions.js' 
    = javascript_include_tag 'jqt.offline.js' 

    %style{ :type => "text/css", :media => "screen" }= "@import \"/stylesheets/jqtouch.css\";"
    %style{ :type => "text/css", :media => "screen" }= "@import \"/themes/jqt/theme.css\";"
    %style{ :type => "text/css", :media => "screen" }= "@import \"/stylesheets/iphone.css\";"
    %script{:type => "text/javascript"} 
      :plain
        $.jQTouch({
          statusBar: 'black-translucent',
          icon: '/images/icons/rucksack.png',
          formSelector: false,
          submitSelector: false,
          startupScreen: "/images/rucksack_startup.png"
        });
  %body#body
    #wrapper
      #content
        = yield
